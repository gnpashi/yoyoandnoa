<p style="color: green"><%= notice %></p>

<%= simple_form_for(@guest) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "שם", required: true %>
    <%= f.input :status, collection: [["מגיע.ה", "coming"], ["לא מגיע.ה", "not_coming"]], label: "מגיע.ה?", required: true %>
    <%= f.input :amount, label: "כמה מגיעים?", required: true %>
    <%= f.input :people, label: "מי באים איתך?" %>
    <%= f.button :submit, "שליחה" %>
  </div>
<% end %>
